name=input("enter your name")
weight=float(input("enter your weight in kg"))
height=float(input("enter your height in metres"))
bmi=weight/(height**2)
print(name, "your BMI is", bmi)
if bmi<18.5:
    print(name, "unfortunately you are underweight, you should eat more")
elif bmi>=18.5 and bmi<25:
    print("congrats", name,"you are perfectly healthy")
elif bmi>=25 and bmi<30:
    print(name,"you are overweight, try to stay fit")
elif bmi>30:
    print(name,"are you from the US?")